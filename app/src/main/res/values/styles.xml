<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primaryAccept</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:colorControlActivated">@color/primaryDark</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <!-- Base application theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primaryAccept</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:colorControlActivated">@color/primaryDark</item>
    </style>

    <!-- Auth borderless button -->
    <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless" />


    <!-- Text Input Style-->
    <style name="TextInputLayoutStyle">
        <item name="android:textColorHint">@color/primaryHint</item>
        <item name="colorAccent">@color/primaryAccept</item>
    </style>

</resources>
